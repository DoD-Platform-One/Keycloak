{
  "baseBranches": [
    "main"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate: Update Keycloak Package Dependencies",
  "draftPR": true,
  "labels": [
    "keycloak",
    "renovate",
    "Package Sustainment",
    "kind::maintenance"
  ],
  "enabledManagers": [
    "custom.regex",
    "helmv3"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "groupName": "Keycloak",
      "postUpgradeTasks": {
        "commands": [
          "bump-chart-yaml",
          "bump-changelog '{{#each upgrades}}- {{depName}} {{currentVersion}} -> {{newVersion}}\\n{{/each}}'",
          "regenerate-helm-docs"
        ],
        "fileFilters": [
          "chart/Chart.yaml",
          "README.md",
          "CHANGELOG.md"
        ],
        "executionMode": "branch"
      }
    }
  ],
  "separateMajorMinor": false,
  "postUpdateOptions": [
    "helmUpdateSubChartArchives"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update chart version to match upstream chart",
      "managerFilePatterns": [
        "/^chart/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s+(?<currentValue>.+)-bb\\.\\d+"
      ],
      "autoReplaceStringTemplate": "version: {{{newValue}}}-bb.0",
      "depNameTemplate": "keycloakx",
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "https://codecentric.github.io/helm-charts"
    },
    {
      "customType": "regex",
      "description": "Update chart's appVersion to match the latest available keycloak image",
      "managerFilePatterns": [
        "/^chart/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "appVersion:[^\\S\\r\\n]+(?<currentValue>.+)"
      ],
      "registryUrlTemplate": "https://registry1.dso.mil",
      "depNameTemplate": "registry1.dso.mil/ironbank/opensource/keycloak/keycloak",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^chart/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "- Keycloak:\\s+(?<currentValue>.+)"
      ],
      "registryUrlTemplate": "https://registry1.dso.mil",
      "depNameTemplate": "registry1.dso.mil/ironbank/opensource/keycloak/keycloak",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^chart/Chart\\.yaml$/"
      ],
      "matchStrings": [
        "image:[^\\S\\r\\n]+(?<depName>.+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update Keycloak image tag in values.yaml",
      "managerFilePatterns": [
        "/^chart/values\\.yaml$/"
      ],
      "matchStrings": [
        "repository:\\s+registry1.dso.mil/ironbank/opensource/keycloak/keycloak\\s+.*\\s+tag:\\s+\"?(?<currentValue>[^\"\\s]+)"
      ],
      "registryUrlTemplate": "https://registry1.dso.mil",
      "depNameTemplate": "registry1.dso.mil/ironbank/opensource/keycloak/keycloak",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^chart/values\\.yaml$/"
      ],
      "matchStrings": [
        "image:\\s+\"?registry1.dso.mil/ironbank/big-bang/base:(?<currentValue>[^\"\\s]+)"
      ],
      "registryUrlTemplate": "https://registry1.dso.mil",
      "depNameTemplate": "registry1.dso.mil/ironbank/big-bang/base",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update PostgreSQL image tag in values.yaml",
      "managerFilePatterns": [
        "/^chart/values\\.yaml$/"
      ],
      "matchStrings": [
        "repository:\\s+ironbank/bitnami/postgres\\s+tag:\\s+\"?(?<currentValue>[^\"\\s]+)"
      ],
      "registryUrlTemplate": "https://registry1.dso.mil",
      "depNameTemplate": "registry1.dso.mil/ironbank/bitnami/postgres",
      "datasourceTemplate": "docker"
    }
  ]
}
